<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/playone"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Game" >

    <ImageButton
        android:id="@+id/one"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="56dp"
        android:src="@drawable/blank"
        android:onClick="one"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
         />

    <ImageButton
        android:id="@+id/two"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/blank" 
        android:onClick="two"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        />

    <ImageButton
        android:id="@+id/three"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/two"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/two"
        android:src="@drawable/blank"
        android:onClick="three"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        />

    <ImageButton
        android:id="@+id/four"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/one"
        android:layout_below="@+id/one"
        android:layout_marginTop="23dp"
        android:src="@drawable/blank"
        android:onClick="four" 
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
       />

    <ImageButton
        android:id="@+id/five"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/four"
        android:layout_toLeftOf="@+id/three"
        android:src="@drawable/blank"
        android:onClick="five"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
         />

    <ImageButton
        android:id="@+id/six"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/three"
        android:layout_alignTop="@+id/five"
        android:src="@drawable/blank" 
        android:onClick="six"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
       />

    <ImageButton
        android:id="@+id/seven"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/four"
        android:layout_below="@+id/four"
        android:layout_marginTop="26dp"
        android:src="@drawable/blank"
        android:onClick="seven"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
         />

    <ImageButton
        android:id="@+id/eight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/seven"
        android:layout_centerHorizontal="true"
        android:src="@drawable/blank"
        android:onClick="eight"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        />

    <ImageButton
        android:id="@+id/nine"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/six"
        android:layout_alignTop="@+id/eight"
        android:src="@drawable/blank" 
        android:onClick="nine"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        />

</RelativeLayout>